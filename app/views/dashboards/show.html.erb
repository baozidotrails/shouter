<%= form_for @dashboard.new_text_shout do |f| %>
  <%= f.text_field :body, placeholder: 'Shout content here' %>
  <%= f.submit "Submit", data: { disable_with: 'Submiting...' } %>
<% end %>

<%= form_for @dashboard.new_photo_shout do |f| %>
  <%= f.file_field :image %>
  <%= f.submit "Submit", data: { disable_with: 'Submiting...' } %>
<% end %>

<%# Will render timeline to timelines/_timeline.html.erb %>
<%= render @dashboard.timeline %>